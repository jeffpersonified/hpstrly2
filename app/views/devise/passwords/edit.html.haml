.row
  .large-5.large-centered.columns.user_form
    %h2.hide Sign up
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), validate: true do |f|
      = devise_error_messages!
      = f.input :email, autofocus: true, as: :email, placeholder: "email"
      = f.input :password, as: :password, placeholder: "password"
      = f.input :password_confirmation, as: :password, placeholder: "password (confirm)"
      = f.submit "Sign up", { class: "small-12 radius button"}
    = render "devise/shared/links"
